{
	"id": "slide-show",
	"name": "Slide Show",
	"version": "0.0.1",
	"class": "SlideShow",
	"file": "slide_show.py",
	"module": "python.plugins.slide_show.slide_show",
	"description": "Media Gallery Slide Show.",
	"disabled": false,
	"features": ["media-image", "media-list"],
	"settings": {
		"schema": {
			"properties": [
			]
		},
		"default": null
	},
	"instanceSettings": {
		"schema": {
			"lookups": {
				"dataSource": {
					"schema": "data-sources",
					"features": ["media-image", "media-list"]
				}
			},
			"properties": [
				{
					"name": "dataSource",
					"type": "schema",
					"required": true,
					"default": null,
					"lookup": "dataSource",
					"label": "Data Source",
					"description": "Gallery single or list source."
				},
				{
					"name": "slideMax",
					"type": "number",
					"required": true,
					"default": 4,
					"min": 0,
					"label": "Max Slides",
					"description": "Maximum number of images in the slideshow. Zero for 'unlimited'."
				},
				{
					"name": "slideMinutes",
					"type": "number",
					"required": true,
					"default": 15,
					"min": 1,
					"label": "Slide Duration Minutes",
					"description": "Minutes per image."
				}
			]
		},
		"default": {
			"dataSource": null,
			"slideMax": 4,
			"slideMinutes": 15
		}
	}
}